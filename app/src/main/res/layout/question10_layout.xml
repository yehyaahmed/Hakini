<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/bg_login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="102dp"
                android:layout_height="152dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/koala_head" />

            <ImageView
                android:id="@+id/question10Choose1IV"
                android:layout_width="228dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="@+id/desc6"
                app:layout_constraintStart_toStartOf="@+id/desc6"
                app:layout_constraintTop_toBottomOf="@+id/desc6"
                app:srcCompat="@drawable/rectangle" />

            <ImageView
                android:id="@+id/question10Choose2IV"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="@+id/question10Choose1IV"
                app:layout_constraintStart_toStartOf="@+id/question10Choose1IV"
                app:layout_constraintTop_toBottomOf="@+id/question10Choose1IV"
                app:srcCompat="@drawable/rectangle" />

            <ImageView
                android:id="@+id/question10Choose3IV"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/question10Choose2IV"
                app:layout_constraintStart_toStartOf="@+id/question10Choose2IV"
                app:layout_constraintTop_toBottomOf="@+id/question10Choose2IV"
                app:srcCompat="@drawable/rectangle" />

            <ImageView
                android:id="@+id/imageView100"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/question10Choose1IV"
                app:layout_constraintEnd_toEndOf="@+id/question10Choose1IV"
                app:layout_constraintTop_toTopOf="@+id/question10Choose1IV"
                app:srcCompat="@drawable/cirecle_accademe_bg" />

            <ImageView
                android:id="@+id/imageView101"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/question10Choose2IV"
                app:layout_constraintEnd_toEndOf="@+id/question10Choose2IV"
                app:layout_constraintTop_toTopOf="@+id/question10Choose2IV"
                app:srcCompat="@drawable/cirecle_accademe_bg" />

            <ImageView
                android:id="@+id/imageView102"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/question10Choose3IV"
                app:layout_constraintEnd_toEndOf="@+id/question10Choose3IV"
                app:layout_constraintTop_toTopOf="@+id/question10Choose3IV"
                app:srcCompat="@drawable/cirecle_accademe_bg" />

            <ImageView
                android:id="@+id/question10Selected1IV"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView100"
                app:layout_constraintEnd_toEndOf="@+id/imageView100"
                app:layout_constraintStart_toStartOf="@+id/imageView100"
                app:layout_constraintTop_toTopOf="@+id/imageView100"
                app:srcCompat="@drawable/select" />

            <ImageView
                android:id="@+id/question10Selected2IV"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView101"
                app:layout_constraintEnd_toEndOf="@+id/imageView101"
                app:layout_constraintStart_toStartOf="@+id/imageView101"
                app:layout_constraintTop_toTopOf="@+id/imageView101"
                app:srcCompat="@drawable/select" />

            <ImageView
                android:id="@+id/question10Selected3IV"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView102"
                app:layout_constraintEnd_toEndOf="@+id/imageView102"
                app:layout_constraintStart_toStartOf="@+id/imageView102"
                app:layout_constraintTop_toTopOf="@+id/imageView102"
                app:srcCompat="@drawable/select" />

            <TextView
                android:id="@+id/desc5"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="52dp"
                android:gravity="center"
                android:lineHeight="24dp"
                android:text="قم بالإجابة عن الأسئلة التالية لتساعدنا\n على تحديد الخدمة الأنسب لك."
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView25" />

            <TextView
                android:id="@+id/title5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:gravity="center"
                android:lineHeight="24dp"
                android:text="طريقة الدفع"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/desc5"
                app:layout_constraintStart_toStartOf="@+id/desc5"
                app:layout_constraintTop_toBottomOf="@+id/desc5" />

            <TextView
                android:id="@+id/desc6"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:gravity="center|center_horizontal"
                android:lineHeight="24dp"
                android:text="اختر طريقة الدفع المفضلة؟"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="@+id/title5"
                app:layout_constraintStart_toStartOf="@+id/title5"
                app:layout_constraintTop_toBottomOf="@+id/title5" />

            <TextView
                android:id="@+id/textView85"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:gravity="center|right"
                android:lineHeight="24dp"
                android:text="تحويلة بنكية"
                android:textColor="#143041"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView100"
                app:layout_constraintEnd_toStartOf="@+id/imageView100"
                app:layout_constraintTop_toTopOf="@+id/imageView100" />

            <TextView
                android:id="@+id/textView86"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:gravity="center|right"
                android:lineHeight="24dp"
                android:text="دفع كاش"
                android:textColor="#143041"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView101"
                app:layout_constraintEnd_toStartOf="@+id/imageView101"
                app:layout_constraintTop_toTopOf="@+id/imageView101" />

            <TextView
                android:id="@+id/textView87"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:gravity="center|right"
                android:lineHeight="24dp"
                android:text="وسيلة إلكترونية أخرى"
                android:textColor="#143041"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView102"
                app:layout_constraintEnd_toStartOf="@+id/imageView102"
                app:layout_constraintTop_toTopOf="@+id/imageView102" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>